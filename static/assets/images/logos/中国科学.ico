<script type="text/javascript">
    var lang='en_US';
    //初始化富文本编辑器
    UE.delEditor('IntegratedInfo');
    UE.delEditor('RegisterSystemInfo');
    var IntegratedInfo= UE.getEditor('IntegratedInfo',{
        //initialFrameWidth :680,//设置编辑器宽度
        initialFrameHeight:100,//设置编辑器高度
        scaleEnabled:true//设置不自动调整高度
        //scaleEnabled {Boolean} [默认值：false]//是否可以拉伸长高，(设置true开启时，自动长高失效)
    });
    var RegisterSystemInfo= UE.getEditor('RegisterSystemInfo',{
        //initialFrameWidth :680,//设置编辑器宽度
        initialFrameHeight:100,//设置编辑器高度
        scaleEnabled:true//设置不自动调整高度
        //scaleEnabled {Boolean} [默认值：false]//是否可以拉伸长高，(设置true开启时，自动长高失效)
    });

    $(function () {
        //Modal可见时触发
        $('#myFooterEditModal').on('shown.bs.modal', function() {
            footerFormValidator();
        });
        //Modal验证销毁重构
        $('#myFooterEditModal').on('hidden.bs.modal', function() {
            if($("#updateFooterForm").data('bootstrapValidator')!=undefined&&$("#updateFooterForm").data('bootstrapValidator')!=null){
                $("#updateFooterForm").data('bootstrapValidator').destroy();
                $('#updateFooterForm').data('bootstrapValidator',null);
            }
        });
        getFooterInfo();
    });
    $("#footer-submit-button").on("click", function(){
        $("#updateFooterForm").data("bootstrapValidator").validate();
        if(!$("#updateFooterForm").data("bootstrapValidator").isValid()){
            return ;
        }
        document.getElementById("updateFooterForm").submit();
    });
    function footerFormValidator() {
        $("#updateFooterForm").bootstrapValidator({
            feedbackIcons: { //根据验证结果显示的各种图标
                valid: 'glyphicon glyphicon-ok',
                invalid: 'glyphicon glyphicon-remove',
                validating: 'glyphicon glyphicon-refresh'
            },fields: {
                CompanyEnName: {
                    validators: {
                        notEmpty: {
                            message: 'You must enter'
                        }
                    }
                },
                CompanyChName: {
                    validators: {
                        notEmpty: {
                            message: 'You must enter'
                        }
                    }
                },
            }
        });
    }

    function getFooterInfo() {
        var lang = 'en_US';
        $.ajax({
            type: "POST",
            url: "/publishers/getFooterInfo",
            success: function (data) {
                $('#companyInfoCh').text(data.companyInfoCh);
                $('#companyInfoEn').text(data.companyInfoEn);
                if (lang == 'zh_CN') {
                    //隐藏英文
                    $('#companyInfoEn').css("display", "none");
                } else {
                    $('#companyInfoCh').css("display", "none");
                }
                var info = data.integratedInfo + data.registerSystemInfo;
                $('#registerInfos').html(info);
                //去除p标签
                info = $($('#registerInfos').find("p")[0]).html() + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;" + $($('#registerInfos').find("p")[1]).html();
                $('#registerInfos').html(info);
            },
            error: function (message) {
                //swal(getTipData(1), "","error");
            }
        });
    }

    function openFooterModel() {
        //填充数据到编辑按钮
        $("#myFooterEditModal").modal("show");
        $.ajax({
            type: "POST",
            url: "/publishers/getFooterInfo",
            success: function (data) {
                $('#CompanyChName').val(data.companyInfoCh);
                $('#CompanyEnName').val(data.companyInfoEn);
                IntegratedInfo.setContent("");
                RegisterSystemInfo.setContent("");
                IntegratedInfo.setContent(data.integratedInfo);
                RegisterSystemInfo.setContent(data.registerSystemInfo);
            },
            error: function (message) {
                //swal(getTipData(1), "","error");
            }
        });
    }

    function checkFile(file) {
        if (file.files && file.files[0]) {
            if (file.files[0].size > 20971520) {
                swal('The file size should not exceed 20MB');
            } else {
                $("#removeFile").show();
            }
        }
    }

    function cleanFile(obj){
        //清空隐藏域
        $(obj).parent().find("input[type='hidden']").val("");
        //清空开始
        var file = $(obj).parent().find("input[type='file']");
        file.after(file.clone().val(""));
        file.remove();
        //清空结束
        $(obj).hide();
    }

    function openContactModel() {
        $("#myContactModal").modal("show");
    }

    $("#contact-submit-button").on("click", function(){
        //校验数据
        var file = document.getElementById("filePath").files[0];
        if (file != undefined && file.size > 20971520){
            swal('The file size should not exceed 20MB');
            return;
        }
        var journalName = $("#JournalName").val();
        if (journalName == ''){
            swal('journal name can not empty');
            return;
        }
        var question = $("#questionInfos").val();
        if (question == ''){
            swal('question can not empty');
            return;
        }
        var surname = $("#surname").val();
        if (surname == ''){
            swal('surname can not empty');
            return;
        }
        var lastname = $("#lastname").val();
        if (lastname == ''){
            swal('lastname can not empty');
            return;
        }
        var email = $("#email").val();
        if (email == ''){
            swal('email can not empty');
            return;
        }
        var comfirmEmail = $("#comfirmEmail").val();
        if (comfirmEmail == ''){
            swal('comfirm email can not empty');
            return;
        }
        if (email != comfirmEmail) {
            swal('The email address is different');
            return;
        }
        if (!email.match(/^([a-zA-Z0-9_-])+@([a-zA-Z0-9_-])+((\.[a-zA-Z0-9_-]{2,3}){1,2})$/)) {
            swal('The email format is incorrect');
            return;
        }
        document.getElementById("updateContactForm").submit();
        swal('Saved', "", "success")

    });

    $("#cancel-submit-button").on("click", function(){
        $('#updateContactForm')[0].reset();
    });

</script>
